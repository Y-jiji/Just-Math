%% Some marcos to write block notation  %%
\newcommand{\Field}[3]{
    #1\left|\underline{\overline{#2\begin{aligned}
       #3
    \end{aligned}#2}}\right|
}
\newcommand{\FieldEndl}[3]{
\left.\begin{aligned}
    & \left.\begin{aligned}#1\end{aligned}\right.\\
    & \left|\underline{\overline{#2\begin{aligned}
       #3
    \end{aligned}#2}}\right|
\end{aligned}\right.
}
\newcommand{\Guard}[1]{
\left[~\begin{aligned}
    #1
\end{aligned}\right.
}
